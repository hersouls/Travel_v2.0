  // ì»´í¬ë„ŒíŠ¸ ë¡œì§
});

const useMemoizedCurrentLine = (sync: SyncLine[], currentTime: number) => {
  return useMemo(() => {
    return sync.findIndex((line, index) => {
      const nextLine = sync[index + 1];
      return currentTime >= line.time && (!nextLine || currentTime < nextLine.time);
    });
  }, [sync, currentTime]);
};
